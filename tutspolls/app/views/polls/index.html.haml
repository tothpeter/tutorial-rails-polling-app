%h1 Listing polls

%ul.list-unstyled
  - @polls.each do |poll|
    %li
      %p= link_to poll.title, poll
      %p.btn-group.btn-group-xs
        = link_to 'Edit', edit_poll_path(poll), class: "btn btn-default"
        = link_to 'Destroy', poll, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: "btn btn-default"
        = link_to 'Add Question', new_poll_question_path(poll), class: "btn btn-default"
        = link_to 'Answer', new_poll_reply_path(poll), class: "btn btn-default"

%p= link_to 'New Poll', new_poll_path, class: "btn btn-primary"